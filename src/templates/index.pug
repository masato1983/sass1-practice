extends extends/_layout.pug

block append config
  - var subTitle = 'Home'
  - var Description = 'このページの概要を記述する'
  - var Keywords = 'このページのキーワードを記述する'
  - var currentUrl = 'index.html'

block append links
  link(rel="stylesheet", href=cssPath+"main.min.css")

block content
  div.wrapper
    h1 #{mainTitle}
    h2 #{subTitle}
    h3  My awesome heading
    p: a(href=pagesPath+"about.html") This will link to about.html file
    p: a(href=pagesPath+"contact.html") This will link to contact.html file

block append scripts
  script(src=jsPath+"project.min.js")